menuconfig TMC2300
	bool "Enable support for the TMC2300 stepper driver"
	default y
	depends on DT_HAS_TRINAMIC_TMC2300_ENABLED
	select HAS_TMCLIB
	select SERIAL if $(dt_compat_on_bus,$(DT_COMPAT_TRINAMIC_TMC2300),uart)
	select TMC_UART if $(dt_compat_on_bus,$(DT_COMPAT_TRINAMIC_TMC2300),uart)
	help
		Enable driver for TMC2300 stepper driver.

if TMC2300

# TODO: add diag pin

endif # TMC2300
